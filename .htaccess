<IfModule mod_headers.c>
    # Configurado com o ip do frontend
    Header always set Access-Control-Allow-Origin http://localhost:3000
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, DELETE, PUT, PATCH"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

RewriteEngine On

# Permitir que as requisições OPTIONS passem direto (precisa por conta do CORS)
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Redireciona tudo menos arquivos e diretórios que existem pro index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]